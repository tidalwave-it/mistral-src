<project> 
    <path id="cobertura.classpath">
        <!-- hack to find the lib folder also from the Examples directory -->
        <fileset dir="${basedir}/..">
            <include name="**/tools/cobertura-1.8/cobertura.jar" />
            <include name="**/tools/cobertura-1.8/lib/**/*.jar" />
        </fileset>
    </path>
    
    <taskdef classpathref="cobertura.classpath" resource="tasks.properties"/>
    
    <target name="cobertura-instrument" depends="init,compile-test,-pre-test-run">
        <cobertura-instrument todir="${build.test.cobertura.classes.dir}">
            <fileset dir="${build.classes.dir}">
                <include name="**/*.class"/>
            </fileset>
        </cobertura-instrument>
    </target>
       
    <target name="cobertura-coverage-report" depends="init">
        <cobertura-report srcdir="${src.dir}" destdir="${cobertura.report.dir}"/>
       <delete file="Serialized" failonerror="false"/>
       <delete file="cobertura.ser" failonerror="false"/>
    </target>
   
    <target name="publish-cobertura-report" depends="init,cobertura-coverage-report">
        <copy todir="../../www/report/cobertura/${ant.project.name}">
            <fileset dir="${cobertura.report.dir}" includes="**/*"/>
        </copy>    
    </target>

    <target name="cobertura-report" depends="test-coverage, publish-cobertura-report"/>
   
    <target name="test-coverage" depends="init,compile-test,-pre-test-run,cobertura-instrument,-do-test-run,test-report,-post-test-run,-test-browse" description="Run unit tests with coverage."/>

    <target name="-cobertura-clean">
       <delete file="Serialized" failonerror="false"/>
       <delete file="cobertura.ser" failonerror="false"/>
    </target>
</project> 
