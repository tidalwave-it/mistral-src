                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>maven2-snapshot.tidalwave.it</id>
            <name>Tidalwave Maven Snapshot Repository</name>
            <url>http://services.tidalwave.it/nexus/content/repositories/snapshots</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>maven2-release.tidalwave.it</id>
            <name>Tidalwave Maven Release Repository</name>
            <url>http://services.tidalwave.it/nexus/content/repositories/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>maven2-release-repository.nbpwr.kenai.com</id>
