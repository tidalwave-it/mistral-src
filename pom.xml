        <module>modules/Operations</module>
        <module>modules/Contributions</module>
        <module>modules/Processor</module>
        <module>modules/Renderer</module>
        <module>modules/JAI-Plugin</module>
        <module>modules/ImageJ-Plugin</module>
        <module>modules/NBM</module>
        <module>Examples</module>
    </modules>

</project>
