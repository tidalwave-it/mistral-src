        <repository>
            <id>maven2-snapshot-repository.tidalwave.it</id>
            <name>Tidalwave Snapshot Repository</name>
            <url>http://services.tidalwave.it/nexus/content/repositories/snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>maven2-release-repository.mistral.kenai.com</id>
            <name>Mistral Maven Release Repository</name>
            <url>dav:https://kenai.com/website/mistral/maven-repository/releases</url>
        </repository>
        <snapshotRepository>
            <id>maven2-snapshot-repository.tidalwave.it</id>
