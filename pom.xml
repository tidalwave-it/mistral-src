<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>it.tidalwave.superpom</groupId>
        <artifactId>superpom</artifactId>
        <version>1.11</version>
    </parent>

    <groupId>org.imajine</groupId>
    <artifactId>org-imajine-image</artifactId>
    <packaging>pom</packaging>
    <version>0.10-SNAPSHOT</version>

    <name>Mistral (master)</name>
    <url>http://mistral.tidalwave.it</url>
    <description>Mistral - open source imaging engine</description>
    <inceptionYear>2003</inceptionYear>

    <!-- Repeated because of http://jira.codehaus.org/browse/SCM-442 -->
    <scm>
        <connection>scm:hg:${scm.repo.readonly.url}</connection>
        <developerConnection>scm:hg:${scm.repo.effective.url}</developerConnection>
        <url>${scm.repo.browse.url}</url>
    </scm>

    <mailingLists>
        <mailingList>
            <name>Continuous Integration</name>
            <post>ci@mistral.kenai.com</post>
            <archive>http://kenai.com/projects/mistral/lists/ci/archive</archive>
        </mailingList>
        <mailingList>
            <name>Commits</name>
            <post>commits@mistral.kenai.com</post>
            <archive>http://kenai.com/projects/mistral/lists/commits/archive</archive>
        </mailingList>
        <mailingList>
            <name>Developers</name>
            <post>dev@mistral.kenai.com</post>
            <archive>http://kenai.com/projects/mistral/lists/dev/archive</archive>
        </mailingList>
        <mailingList>
            <name>Users</name>
            <post>users@mistral.kenai.com</post>
            <archive>http://kenai.com/projects/mistral/lists/users/archive</archive>
        </mailingList>
    </mailingLists>

    <properties>
        <scm.repo.url>ssh://hg@bitbucket.org/tidalwave/mistral-src</scm.repo.url>
        <scm.repo.readonly.url>https://bitbucket.org/tidalwave/mistral-src</scm.repo.readonly.url>
        <scm.repo.browse.url>https://bitbucket.org/tidalwave/mistral-src/src</scm.repo.browse.url>
        
        <libraries.version>1.1.5</libraries.version>
        <netbeans.version>RELEASE70</netbeans.version>
    </properties>

    <repositories>
        <repository>
            <id>releases-oss.sonatype.org</id>
            <name>Sonatype Releases Repository</name>
            <url>http://oss.sonatype.org/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>snapshots-oss.sonatype.org</id>
            <name>Sonatype Snapshots Repository</name>
            <url>http://oss.sonatype.org/content/repositories/snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <!-- This provides the required versions of JAI-ImageIO, JAI and IJ -->
        <!-- repository>
            <id>maven2-aux-repository.tidalwave.kenai.com</id>
            <name>Tidalwave Maven Aux Repository</name>
            <url>https://kenai.com/svn/tidalwave~maven-repo/aux/2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository -->
    </repositories>

    <distributionManagement>
        <site>
            <id>website-mistral.kenai.com</id>
            <url>dav:https://kenai.com/website/mistral/site/${project.version}</url>
        </site>
    </distributionManagement>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.imajine</groupId>
                <artifactId>org-imajine-image-core</artifactId>
                <version>0.10-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.imajine</groupId>
                <artifactId>org-imajine-image-core</artifactId>
                <version>0.10-SNAPSHOT</version>
                <classifier>tests</classifier>
            </dependency>
            <dependency>
                <groupId>org.imajine</groupId>
                <artifactId>org-imajine-image-operations</artifactId>
                <version>0.10-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.imajine</groupId>
                <artifactId>org-imajine-image-contributions</artifactId>
                <version>0.10-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.imajine</groupId>
                <artifactId>org-imajine-image-plugin-jai</artifactId>
                <version>0.10-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.imajine</groupId>
                <artifactId>org-imajine-image-processor</artifactId>
                <version>0.10-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.imajine</groupId>
                <artifactId>org-imajine-image-renderer</artifactId>
                <version>0.10-SNAPSHOT</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>

            <!-- Needed for setting that inherited = false -->
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <inherited>false</inherited>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>modules</module>
    </modules>

</project>

